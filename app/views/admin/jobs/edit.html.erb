<h1> Edit a job </h1>

<%= simple_form_for [:admin, @job ] do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "赏金下限" %>
<%= f.input :wage_upper_bound, :label => "赏金上限" %>
<%= f.input :city, :label => "城市坐标" %>
<%= f.input :category, :label => "活动分类" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>

  <%= f.submit "Submit" %>
<% end %>
