<h1> Add a job </h1>

<%= simple_form_for [:admin,@job] do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "赏金下限" %>
<%= f.input :wage_upper_bound, :label => "赏金上限" %>
<%= f.input :city, :label => "城市坐标" %>
<%= f.input :category, :label => "活动分类", :collection =>["书法大赛", "书法社交", "你的真迹"] %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>

  <%= f.submit "Submit" %>
<% end %>
