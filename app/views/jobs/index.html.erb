<!-- <div class="col-md-12" col-centered> -->
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4> 活动列表
      <div class="dropdown clearfix pull-right">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            排序
              <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
                <%= link_to("按照赏金下限排序", jobs_path(:order => "by_lower_bound")) %>
              </li>
              <li>
                  <%= link_to("按照赏金上限排序", jobs_path(:order => "by_upper_bound")) %>

              </li>
              <li>
                <%= link_to("按照发表时间排序", jobs_path ) %>

              </li>
          </ul>
      </div>

    </div>
</h4>


<div class="panel-body">

<table class="table table-boldered">

    <thead>
        <tr>
            <td>
                活动名称</td>
            <td>赏金下限</td>
            <td>赏金上限</td>
            <td>城市坐标</td>
            <td>刊登时间</td>

        </tr>

    </thead>
    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td>
                <%= link_to(job.title, job_path(job)) %>
            </td>
            <td>
                <%= job.wage_lower_bound %>
            </td>
            <td>
                <%= job.wage_upper_bound %>
            </td>
            <td>
                <%= job.city %>
            </td>
            <td>
                <%= job.created_at %>
            </td>
        </tr>
        <% end %>
    </tbody>




</table>
</div>
</div>
</div>
